<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment1.NewProd">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name"/>
            <Entry x:Name="n_name"/>
            <Label Text="Quantity"/>
            <Entry x:Name="n_qty" Keyboard="Numeric"/>
            <Label Text="Price"/>
            <Entry x:Name="n_price"/>
            <Button Text="ADD" Clicked="Add_Clicked"/>
            <Button Text="CANCEL" Clicked="Cancel_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>